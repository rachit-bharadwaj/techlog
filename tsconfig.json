{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_document.js", "pages/api/auth/[...nextauth].js", "pages/index.tsx", "pages/_app.tsx", "pages/api/restricted.js", "components/Navbar.tsx", "models/User.js", "models/Post.js", "pages/api/getPosts.js"],
  "exclude": ["node_modules"]
}
